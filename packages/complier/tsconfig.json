{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src-pages", "./client.d.ts", "./node_modules/vite/client.d.ts", "tests"],
  "exclude": ["**/tests/**", "template"]
}
